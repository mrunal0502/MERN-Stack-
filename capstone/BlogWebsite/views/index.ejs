    <% if (formData) { %>
        <div class="card">
            <div class="blog">
                <div class="header">
                    <h3>
                        <%= formData.title %>
                    </h3>
                </div>
                <div class="info">
                    <p>
                        <%= formData.content %>
                    </p>
                </div>
            </div>
            <div class="img">
                <img src="images/<%= formData.img %>.png" alt="<%= formData.title %>">
            </div>
            <div class="controls">
                <form action="/edit" method="POST" style="display:inline;">
                    <button type="submit" id="edit">Edit</button>
                </form>
                <form action="/delete" method="POST" style="display:inline;">
                    <button type="submit" id="delete">Delete</button>
                </form>
            </div>
        </div>
        <% } %>
